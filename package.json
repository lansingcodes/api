{
  "name": "lansingcodes-firebase-tools",
  "version": "1.0.0",
  "description": "Tools for managing Lansing Codes Firebase databases",
  "author": "Humanity Codes, LLC",
  "license": "MIT",
  "private": true,
  "scripts": {
    "precommit": "npm run lint",
    "build": "run-s compile db:select db:deploy",
    "db:select": "firebase use $FIREBASE_PROJECT",
    "db:deploy": "firebase deploy",
    "compile": "babel src --out-dir dist --ignore node_modules",
    "lint": "eslint --ext .js --ignore-path .gitignore .",
    "lintfix": "eslint --fix --ext .js --ignore-path .gitignore .",
    "f:deploy-succeeded": "node ./dist/run deploy-succeeded",
    "f:load-sponsors": "node ./dist/run load-sponsors"
  },
  "devDependencies": {
    "@babel/cli": "^7.4.4",
    "@babel/core": "^7.4.5",
    "@babel/preset-env": "^7.4.5",
    "babel-eslint": "^10.0.2",
    "eslint": "^5.0.1",
    "eslint-config-prettier": "^3.1.0",
    "eslint-plugin-prettier": "2.6.2",
    "firebase-tools": "^7.0.1",
    "npm-run-all": "^4.1.5",
    "prettier": "1.14.3"
  },
  "dependencies": {
    "firebase-admin": "^8.2.0"
  }
}
