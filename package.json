{
  "name": "lansingcodes-firebase-tools",
  "version": "1.0.0",
  "description": "Tools for managing Lansing Codes Firebase databases",
  "author": "Humanity Codes, LLC",
  "license": "MIT",
  "private": true,
  "scripts": {
    "precommit": "npm run lint",
    "build": "run-s reinstall compile db:select db:deploy",
    "reinstall": "nvm exec 8.10 npm install",
    "compile": "netlify-lambda build src --config ./webpack.functions.js",
    "db:select": "firebase use $FIREBASE_PROJECT",
    "db:deploy": "firebase deploy",
    "lint": "eslint --ext .js --ignore-path .gitignore .",
    "lintfix": "eslint --fix --ext .js --ignore-path .gitignore .",
    "dev": "netlify-lambda serve src --config ./webpack.functions.js"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.4.5",
    "babel-eslint": "^10.0.2",
    "eslint": "^5.0.1",
    "eslint-config-prettier": "^3.1.0",
    "eslint-plugin-prettier": "2.6.2",
    "firebase-tools": "^7.0.1",
    "netlify-lambda": "^1.4.13",
    "npm-run-all": "^4.1.5",
    "prettier": "1.14.3",
    "webpack-node-externals": "^1.7.2"
  },
  "dependencies": {
    "firebase-admin": "^8.2.0"
  }
}
